.box .star_box .big_block {
    -webkit-box-pack: center;
    -webkit-justify-content: center;
        -ms-flex-pack: center;
            justify-content: center;
    position: relative;
}
.box .star_box .big_block .star_img {
      width: 340rpx;
      height: 340rpx;
      background: #d8d8d8;
      border-radius: 50%;
      border: 60rpx solid black;
      -webkit-animation: headRotate 11s linear infinite;
              animation: headRotate 11s linear infinite;
}
.box .star_box .big_block .arunning {
      -webkit-animation-play-state: running;
              animation-play-state: running;
}
.box .star_box .big_block .apaused {
      -webkit-animation-play-state: paused;
              animation-play-state: paused;
}
.box .star_box .big_block .center_block {
      width: 96rpx;
      height: 96rpx;
      background: rgba(0, 0, 0, 0.5);
      border-radius: 50%;
      position: absolute;
      margin: 0 auto;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
          -ms-flex-pack: center;
              justify-content: center;
}
.box .star_box .big_block .center_block .bg_fff {
        width: 45rpx;
        height: 45rpx;
        border-radius: 50%;
}
.box .star_box .photo_animation {
    -webkit-animation: headRotate 11s linear infinite;
            animation: headRotate 11s linear infinite;
}
@-webkit-keyframes headRotate {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
50% {
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
@keyframes headRotate {
0% {
    -webkit-transform: rotate(0deg);
            transform: rotate(0deg);
}
50% {
    -webkit-transform: rotate(180deg);
            transform: rotate(180deg);
}
100% {
    -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
}
}
