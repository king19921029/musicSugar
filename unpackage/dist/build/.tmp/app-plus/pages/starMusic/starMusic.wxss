.box {
  font-size: 28rpx;
  color: #333333;
}
.box .label_box {
    width: 95%;
    margin-left: 5%;
    margin-top: 44rpx;
    overflow-x: auto;
    white-space: nowrap;
}
.box .label_box .label {
      width: 112rpx;
      height: 56rpx;
      line-height: 56rpx;
      text-align: center;
      background: #f2f2f2;
      border-radius: 28px;
      display: inline-block;
      margin-right: 22rpx;
}
.box .label_box .add_bg {
      background: #FF6666;
      color: #fff;
}
.box .star_mic {
    margin-top: 50rpx;
    background: #F4F4F4;
    padding: 20rpx 0;
}
.box .star_mic .star_mic_box {
      border-radius: 20rpx;
      overflow: hidden;
      margin-bottom: 30rpx;
}
.box .star_mic .star_mic_box .star_mic_box_img {
        width: 100%;
        height: 320rpx;
        background: #8190b1;
}
.box .star_mic .star_mic_box .star_mic_box_info {
        background: #fff;
        height: 90rpx;
}
.box .star_mic .star_mic_box .star_mic_box_info .display_flex {
          height: 90rpx;
          -webkit-box-pack: justify;
          -webkit-justify-content: space-between;
              -ms-flex-pack: justify;
                  justify-content: space-between;
          letter-spacing: 2rpx;
}
.box .star_mic .star_mic_box .star_mic_box_info .display_flex .mic_name {
            font-weight: bold;
}

